<!DOCTYPE html>
<html>
    <head>
        <title>Agregar Review</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!--Bootstrap CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="stylesheet" href="/CSS/styles.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="/JS/Form.js"></script>
    </head>

    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #1c1c1c">
            <div class="container-fluid">
                <i class="fa fa-film" style="color: white; font-size: 24px; margin-right: 20px"></i>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/peliculas">Películas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/usuarios">Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <body class="background-primary">
        <h1 class="header">Agregar Review</h1>

        <form name="agregarReview" class="form" action="/review/agregar" onsubmit="return reviewForm()" method="post">
            <div class="mb-3">
                <label for="review-author" class="form-label">Autor</label>
                <input type="text" class="form-control" id="review-author" name="autor" placeholder="El autor" required>
            </div>
            <div class="mb-3">
                <label for="review-content" class="form-label">Contenido</label>
                <textarea class="form-control" id="review-content" rows="3" name="contenido" placeholder="El contenido" required></textarea>
            </div>
            <div class="mb-3">
                <label for="review-rate" class="form-label">Puntuación</label>
                <input type="number" step="0.1" class="form-control" id="review-rate" name="puntuacion" placeholder="La puntuacion" required>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
        <button type="button" class="btn btn-danger" style="position: absolute; bottom: 15px; right: 15px" id="cancel" onclick="location.href='/peliculas'">
            Cancel
        </button>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
                integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>

    </body>
</html>