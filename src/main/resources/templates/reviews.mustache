<!DOCTYPE html>
    <html>
    <head>
        <title>Reviews</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!--Bootstrap CSS-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="stylesheet" href="/CSS/styles.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary" style="background-color: #1c1c1c">
            <div class="container-fluid">
                <i class="fa fa-film" style="color: white; font-size: 24px; margin-right: 20px"></i>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/peliculas">Películas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/misPeliculas">Mis Películas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/usuarios">Usuarios</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <body class="background-primary">
        <h1 class="header">Reviews</h1>

        <div class="card center" style="margin-right: 15%; margin-left: 15%;">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Autor</th>
                        <th scope="col">Contenido</th>
                        <th scope="col">Nota</th>
                        <th scope="col">BTN</th>
                    </tr>
                </thead>
                <tbody>
                    {{#reviews}}
                        <tr>
                            <td>{{autor}}</td>
                            <td>{{contenido}}</td>
                            <td>{{puntuacion}}</td>
                            <td>
                                <button type="button" class="btn btn-warning" id="edit-review" onclick="location.href='/review/editar/{{id}}'">Edit</button>
                                <button type="button" class="btn btn-danger" id="remove-review" onclick="location.href='/review/eliminar/{{id}}'">Remove</button>
                            </td>
                        </tr>
                    {{/reviews}}
                </tbody>
            </table>
            {{^reviews}}
                <h4 style="color: black; text-align: center; margin-top: 15%">
                    Sin reviews
                </h4>
            {{/reviews}}
        </div>

        <button type="button" class="btn btn-danger btn-lg" style="position: absolute; bottom: 15px; right: 15px" id="back" onclick="location.href='/peliculas'">
            Back
        </button>
        <br>
        <div class="center">
            <button type="button" class="btn btn-primary btn-lg" id="create-review" onclick="location.href='/review/agregar'">
                New Review
            </button>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
                integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>
    </body>
</html>